{{! /organization/profile/new }}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="title-post">Welcome, {{username}}</h1>
      <h4 class="log-in-title">Please complete your profile</h4>
      <form class="form-style-7" action="/organization/profile/new" method="POST"> {{!change action type}}
        <ul>
          <li>
            <label for="organization_name">Enter Organization Name</label>
            <input type="text" name="organization_name" placeholder="DenverRescue" required>
            <span>Enter Your Company Name</span>
          </li>
          <li>
            <label for="contact">Enter Contact Name</label>
            <input type="text" name="contact" placeholder="John Smith" required>
            <span>Enter Your Contact Name</span>
          </li>
          <li>
            <label for="phone_number">Enter Contact Number</label>
            <input type="text" name="phone_number" placeholder="303-749-0110" required>
            <span>Enter Your Contact Number</span>
          </li>
          <li>
            <label for="website">Enter Website</label>
            <input type="text" name="website" placeholder="www.DenverRescue@volunteer.org" required>
            <span>Enter Your Website</span>
          </li>
          <li>
            <label for="street">Enter Street Name</label>
            <input type="text" name="street" placeholder="1644 Platte St." required>
            <span>Enter Your Street</span>
          </li>
          <li>
            <label for="city">Enter City</label>
            <input type="text" name="city" placeholder="Denver" required>
            <span>Enter Your City</span>
          </li>
          <li>
            <label for="state">Enter State</label>
            <input type="text" name="state" placeholder="CO" required>
            <span>Enter Your State</span>
          </li>
          <li>
            <label for="zip">Enter Zip</label>
            <input type="text" name="zip" placeholder="80202" required>
            <span>Enter Your Zip</span>
          </li>
          <li>
            <label for="org_logo_url">Enter an Organization Logo URL</label>
            <input type="text" name="org_logo_url" placeholder="https://organizationlogo.com">
            <span>Enter an Organization Logo URL</span>
          </li>
          <li>
            <label for="about">Enter Comapny Description</label>
            <textarea rows="4" type="text" name="about" required> </textarea>
            <span>Enter Your Comapny Description</span>
          </li>
          <li>
            <input type="submit" class="submit-btn" value="Submit" required>
          </li>
        </ul>
      </form>
    </div>
  </div>
</div>
