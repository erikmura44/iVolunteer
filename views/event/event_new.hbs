{{! /event/new }}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h1 class="title-post">Create A New Event</h1>
      <form class="form-style-7" action="/event/new" method="POST">
        <div class="col-md-6">
          <ul>
            <li>
              <label for="title">Title</label>
              <input type="text" name="title" placeholder="Event Title" required>
              <span>Enter your event title</span>
            </li>
            <li>
              <label for="location">Location/building</label>
              <input type="text" name="location" placeholder="Galvanize Platte">
              <span>Enter your event location</span>
            </li>
            <li>
              <label for="street">Street</label>
              <input type="text" name="street" placeholder="1640 South Broadway" required>
              <span>Enter the street</span>
            </li>
            <li>
              <label for="city">City</label>
              <input type="text" name="city" placeholder="Denver" required>
              <span>Enter the city</span>
            </li>
            <li>
              <label for="state">State</label>
              <input type="text" name="state" placeholder="CO" required>
              <span>Enter the state</span>
            </li>
            <li>
              <label for="zip">Zip Code</label>
              <input type="text" name="zip" placeholder="80202" required>
              <span>Enter the zip code</span>
            </li>
            <li>
              <label for="start_date">Start Date</label>
              <input type="date" name="start_date" required>
              <span>Enter the start date</span>
            </li>
          </ul>
        </div>
        <div class="col-md-6">
          <ul>
          <li>
            <label for="end_date">End Date</label>
            <input type="date" name="end_date" required>
            <span>Enter the end date</span>
          </li>
          <li>
            <label for="start_time">Start Time</label>
            <input type="time" name="start_time" required>
            <span>Enter the time the event ends</span>
          </li>
          <li>
            <label for="end_time">End Time</label>
            <input type="time" name="end_time" placeholder="" required>
            <span>Enter the time the event ends</span>
          </li>
          <li>
            <label for="available_positions">Number of Volunteers Desired</label>
            <input type="number" name="available_positions" placeholder="0" required>
            <span>Enter the number of Volunteers Desired</span>
          </li>
          <li>
            <label for="description">Event Description</label>
            <textarea rows="8" name="description" placeholder="Insert information about the event." required></textarea>
            <span>Enter the event description</span>
          </li>
          <li>
            <input type="submit" class="btn btn-primary" value="Submit" required>
          </li>
          </ul>
        </div>
      </form>
    </div>
  </div>
</div>
