{{! /volunteer/profile/new }}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="title-post">Welcome, {{username}}</h1>
      <h4 class="log-in-title">Please complete your profile</h4>
      <form class="form-style-7" action="/volunteer/profile/new" method="POST"> {{!change action type}}
        <ul>
          <li>
            <label for="first_name">Enter Your First Name</label>
            <input type="text" name="first_name" placeholder="John" required>
            <span>Enter Your First Name</span>
          </li>
          <li>
            <label for="last_name">Enter your Last Name</label>
            <input type="text" name="last_name" placeholder="Smith" required>
            <span>Enter Your Last Name</span>
          </li>
          <li>
            <label for="city">Enter City</label>
            <input type="text" name="city" placeholder="Denver" required>
            <span>Enter Your City</span>
          </li>
          <li>
            <label for="state">Enter State</label>
            <input type="text" name="state" placeholder="CO" required>
            <span>Enter Your State</span>
          </li>
          <li>
            <label for="phone_number">Enter Contact Number</label>
            <input type="text" name="phone_number" placeholder="303-749-0110" required>
            <span>Enter Your Contact Number</span>
          </li>
          <li>
            <label for="picture_url">Enter a Profile Picture URL</label>
            <input type="text" name="picture_url" placeholder="https://encrypted-tbn3.gstatic.com/images">
            <span>Enter a Profile Picture URL</span>
          </li>
          <li>
            <label for="about">Enter Your About Me</label>
            <textarea rows="4" type="text" name="about" required> </textarea>
            <span>Enter Your About Me</span>
          </li>
          <li>
            <input type="submit" class="submit-btn" value="Submit" required>
          </li>
        </ul>
      </form>
    </div>
  </div>
</div>
