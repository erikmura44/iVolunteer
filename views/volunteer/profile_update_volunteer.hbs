{{! /volunteer/profile/update/:id }}

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="title-post">Welcome, {{volData.user_name}}</h1>
      <h4 class="log-in-title">Please update your profile</h4>
      <form class="form-style-7" action="/volunteer/profile/update/{{volData.id}}" method="POST"> {{!change action type}}
        <ul>
          <li>
            <label for="first_name">Enter Your First Name</label>
            <input type="text" name="first_name" value="{{volData.first_name}}" placeholder="{{volData.first_name}}" required>
            <span>Enter Your First Name</span>
          </li>
          <li>
            <label for="last_name">Enter your Last Name</label>
            <input type="text" name="last_name" value="{{volData.last_name}}" placeholder="{{volData.last_name}}" required>
            <span>Enter Your Last Name</span>
          </li>
          <li>
            <label for="city">Enter City</label>
            <input type="text" name="city" value="{{volData.city}}" placeholder="{{volData.city}}" required>
            <span>Enter Your City</span>
          </li>
          <li>
            <label for="state">Enter State</label>
            <input type="text" name="state" value="{{volData.state}}" placeholder="{{volData.state}}" required>
            <span>Enter Your State</span>
          </li>
          <li>
            <label for="phone_number">Enter Contact Number</label>
            <input type="tel" name="phone_number" value="{{volData.phone_number}}" placeholder="{{volData.phone_number}}" required>
            <span>Enter Your Contact Number</span>
          </li>
          <li>
            <label for="picture_url">Enter a Profile Picture URL</label>
            <input type="text" name="picture_url" value="{{volData.picture_url}}" placeholder="{{volData.picture_url}}">
            <span>Enter a Profile Picture URL</span>
          </li>
          <li>
            <label for="about">Enter Your About Me</label>
            <textarea rows="4" type="text" name="about" required>{{volData.about}}</textarea>
            <span>Enter Your About Me</span>
          </li>
          <li>
            <input type="submit" class="submit-btn" value="Submit" required>
          </li>
        </ul>
      </form>
    </div>
  </div>
</div>
